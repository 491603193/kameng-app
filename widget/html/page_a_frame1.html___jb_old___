    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <style type="text/css">
        html, body {
            background-color: white;
        }

        header {
            border-bottom: 1px solid #ccc;
            padding: 25px 0;
        }

        span {
            padding: 10px 5px;
            margin: 5px;
            display: inline-block;
            background-color: #e8e8e8;
        }

        .hover {
            opacity: .4;
        }

        .btn {
            position: relative;
            left: 125px;
            top: -120px;
            width: 180px;
        }

        #img {}
    </style>
